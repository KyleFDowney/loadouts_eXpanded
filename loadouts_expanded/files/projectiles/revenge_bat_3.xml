<Entity 
  name="$projectile_default" tags="projectile_player"
   >
   	<LuaComponent
		execute_every_n_frame="3"
		script_source_file="mods/loadouts_expanded/files/scripts/revenge_bat_flight.lua"
		>
	</LuaComponent>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
		  gravity_y="0"
		  air_friction="0"
		  mass="0.01"
		  >
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.01"
    lob_max="0.02"
    speed_min="100"
    speed_max="150"
    friction="1"
    direction_random_rad="360"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    on_collision_remove_projectile="0"
    lifetime="1000"
    damage="0.3"
    damage_scaled_by_speed="0"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_medium.xml"
    shoot_light_flash_r="255"
    shoot_light_flash_g="210"
    shoot_light_flash_b="70"
    shoot_light_flash_radius="80"
    die_on_low_velocity="0"
    die_on_low_velocity_limit="5"
    bounce_always="1"
    bounces_left="200"
    bounce_energy=".8"
    velocity_sets_rotation="1"
    velocity_updates_animation="0"
    velocity_sets_scale="1"
    velocity_sets_scale_coeff="0.6"
	knockback_force="0.4"
	physics_impulse_coeff="600"
     >
	<damage_by_type
		slice="0"
		>
	</damage_by_type>
        <config_explosion>
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/loadouts_expanded/files/projectiles/gfx/revenge_bat.xml" 
    next_rect_animation=""
    rect_animation="bat" 
	offset_x="0" 
	offset_y="0" 
    update_transform_rotation="1"
     >
  </SpriteComponent>
  

  <AudioComponent
      file="data/audio/Desktop/projectiles.snd"
      event_root="player_projectiles/bullet_burst_of_air">
  </AudioComponent>
  
</Entity>