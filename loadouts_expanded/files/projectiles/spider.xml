<Entity 
  name="$projectile_default" tags="projectile_player"
   >
   	<LuaComponent
		execute_every_n_frame="5"
		script_source_file="mods/loadouts_expanded/files/scripts/spider_dash.lua"
		>
	</LuaComponent>

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
		  gravity_y="175"
		  air_friction="0"
		  mass="0.02"
		  >
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.01"
    lob_max="0.02"
    speed_min="200"
    speed_max="250"
    friction="1"
    direction_random_rad="0.01"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    on_collision_remove_projectile="0"
    lifetime="900"
    damage="0.8"
    damage_scaled_by_speed="0"
    lifetime_randomness="7"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_medium.xml"
    shoot_light_flash_r="255"
    shoot_light_flash_g="210"
    shoot_light_flash_b="70"
    shoot_light_flash_radius="80"
    die_on_low_velocity="1"
    die_on_low_velocity_limit="5"
    bounce_always="1"
    bounces_left="200"
    bounce_energy="0.6"
	bounce_fx_file="data/entities/particles/bounce_effects/spitter_purple.xml"
    velocity_sets_rotation="1"
    velocity_updates_animation="1"
    velocity_sets_scale="1"
    velocity_sets_scale_coeff="0.6"
	knockback_force="0.4"
	physics_impulse_coeff="600"
     >
	<damage_by_type
		slice="0"
		>
	</damage_by_type>
        <config_explosion
      never_cache="1" 
      camera_shake="0" 
      explosion_radius="6" 
      explosion_sprite="data/particles/puff_02.xml" 
      explosion_sprite_lifetime="0" 
      create_cell_probability="100" 
      create_cell_material="poison"
      hole_destroy_liquid="0"
      hole_enabled="1" 
	  damage="0"
	  ray_energy="50000"
      hole_image="data/temp/explosion_hole.png" 
      particle_effect="1" 
      damage_mortals="0"
	  physics_explosion_power.min="0" 
      physics_explosion_power.max="0.1" 
      physics_throw_enabled="0" 
      shake_vegetation="0" 
      sparks_enabled="0" 
      sparks_count_max="2" 
      sparks_count_min="1"
      light_fade_time="0.1" 
      stains_enabled="0">
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/loadouts_expanded/files/projectiles/gfx/spider.xml" 
    next_rect_animation=""
    rect_animation="spider" 
	offset_x="0" 
	offset_y="0" 
     
     >
  </SpriteComponent>
  

  <AudioComponent
      file="data/audio/Desktop/projectiles.snd"
      event_root="player_projectiles/bullet_smg">
  </AudioComponent>
  
</Entity>

